<% provide(:title, 'Expenses') %>
<h1>Expenses</h1>

<%= paginate @items %>

<% if @items.empty? %>
<br /><br /><h3 class = 'center'>You do not have any expenses to be displayed. <br /><br />You can now start managing your expenditure <br />by adding an expense.</h3><br /><br />
<% else %>
<table class="table table-hover">
  <tr>
    <th>Category</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Date</th>
    <th></th>
    <th></th>
  </tr>
  <%= render @items %> 
</table>
<% end %>

<div class="center hero-unit">
  <a href="/expenses/new" 
          class="btn btn-large btn-primary" 
          data-toggle="modal" 
          data-target="#add_expense_modal">
      Add a new expense</a>
</div>

<div class="modal fade" id="add_expense_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Expense</h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<script>
  $("document").ready(function(){

    $('#add_expense_modal').on('show.bs.modal', function (e) {
      $('.text-danger').text("");
    });

    $('#add_expense_modal').on('hidden.bs.modal', function () {
      $(this).removeData('bs.modal');
    });

  });
</script>
