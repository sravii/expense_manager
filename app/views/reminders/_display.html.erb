<table class="table table-hover">
  <tr>
    <th>Category</th>
    <th>Description</th>
    <th>Alert Threshold</th>
    <th>Frequency</th>
    <th>Last pay date</th>
    <th>Next pay date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= Reminder::CATEGORY_BY_VALUE[reminder.category] %></td>
    <td><%= reminder.description %></td>
    <td><%= reminder.alert_theshold %> days</td>
    <td><%= Reminder::FREQ_BY_VALUE[reminder.frequency] %></td>
    <td><%= reminder.last_pay_date.strftime("%B #{reminder.last_pay_date.day.ordinalize}, %Y") %></td>
    <td><%= reminder.next_pay_date.strftime("%B #{reminder.next_pay_date.day.ordinalize}, %Y") %></td>
    <td>
      <!-- <a href="/reminder/edit" 
          class="btn btn-default" 
          data-toggle="modal" 
          data-target="#myModal3">
      Edit</a> -->
      <%= link_to 'Edit', edit_reminder_path(reminder), class: "btn btn-default", "data-toggle" => "modal", :data => {:target => "#myModal4"} %>
    </td>
    <td>
      <%= link_to 'Delete', reminder, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
    </td>
    <td>
      <%= link_to 'Paid', paid_reminder_path(reminder), class: "btn btn-default", "data-toggle" => "modal", :data => {:target => "#myModal5"} %>
    </td>
  </tr>
<% end %>
</table>

<div id="myModal4" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Reminder</h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<div id="myModal5" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add to expenses</h4>
      </div>
      <div class="modal-body">...</div>
    </div>
  </div>
</div>

<script>
  $("document").ready(function(){

    $('#myModal4').on('show.bs.modal', function (e) {
      $('.error_msg').text("");
    });

    $('#myModal5').on('show.bs.modal', function (e) {
      $('.error_msg').text("");
    });

  });
</script>