
  <tr>
    <td><%= Reminder::CATEGORY[reminder.category] %></td>
    <td><%= reminder.description %></td>
    <td><%= reminder.alert_threshold %> days</td>
    <td><%= Reminder::FREQ[reminder.frequency] %></td>
    <td><%= human_date(reminder.last_pay_date) %></td>
    <td><%= human_date(reminder.next_pay_date) %></td>
    <td>
      <%= link_to 'Edit', edit_reminder_path(reminder), class: "btn btn-default", "data-toggle" => "modal", :data => {:target => "#edit_reminder_modal"} %>
    </td>
    <td>
      <%= link_to 'Delete', reminder, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
    </td>
    <td>
      <%= link_to 'Paid', paid_reminder_path(reminder), class: "btn btn-default", "data-toggle" => "modal", :data => {:target => "#paid_reminder_modal"} %>
    </td>
  </tr>

<div id="edit_reminder_modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Reminder</h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<div id="paid_reminder_modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add to expenses</h4>
      </div>
      <div class="modal-body">...</div>
    </div>
  </div>
</div>

<script>
  $("document").ready(function(){

    $('#edit_reminder_modal').on('show.bs.modal', function (e) {
      $('.text-danger').text("");
    });

    $('#paid_reminder_modal').on('show.bs.modal', function (e) {
      $('.text-danger').text("");
    });

    $('#edit_reminder_modal').on('hidden.bs.modal', function () {
      $(this).removeData('bs.modal');
    });

    $('#paid_reminder_modal').on('hidden.bs.modal', function () {
      $(this).removeData('bs.modal');
    });

  });
</script>